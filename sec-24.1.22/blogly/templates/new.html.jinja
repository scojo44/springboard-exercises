{% extends 'base.html.jinja' %}
{% import "macros/labeled_input.html.jinja" as forms %}
{% block title %}Add User{% endblock %}

{% block content %}
  <form action="/users/new" method="post">
    {{ forms.input(label='First Name', name='first', placeholder='John', maxlength=30) }}
    {{ forms.input(label='Last Name', name='last', placeholder='Doe', maxlength=30) }}
    {{ forms.input(label='Image URL', name='image', placeholder='https://example.com/john-doe.png') }}
    <p><button type="submit">Add</button></p>
  </form>
{% endblock %}