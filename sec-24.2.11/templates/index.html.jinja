{% extends 'base.html.jinja' %}
{% block title %}Home{% endblock %}

{% block content %}
  <h1>Recent Posts on Blogly</h1>
  {% for post in posts %}
  <h2>{{ post.title }}</h2>
  <pre>{{ post.content }}</pre>
  by <a href="/users/{{ post.user.id }}">{{ post.user.full_name }}</a> <i>{{ post.friendly_date }}</i></li>
  <hr>
  {% endfor %}
{% endblock %}